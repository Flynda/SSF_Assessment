<h2 class="mt-3">My Bookstore</h2>

<div class="row mt-3">
    {{#each alphabet}}
        <div class="col-2">
            <form action="/list" method="get">
                <input type="hidden" name="qualifier" value="Letter">
                <input type="hidden" name="q" value="{{this}}">
                <button type="submit" class="btn btn-primary mt-2">{{this}}</button>
            </form>
        </div>
    {{/each}}
</div>

<div class="row mt-3">
    {{#each numbers}}
        <div class="col-2">
            <form action="/list" method="get">
                <input type="hidden" name="qualifier" value="Number">
                <input type="hidden" name="q" value="{{this}}">
                <button type="submit" class="btn btn-secondary mt-2">{{this}}</button>
            </form>
        </div>
    {{/each}}
</div>