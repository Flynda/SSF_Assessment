{{#if hasReview}}
    {{#each reviews}}
        <h3 class="mt-3">
            {{this.title}}
        </h3>
        by <i>{{this.author}}</i>
        <br>
        Reviewer: <i>{{this.reviewer}}</i>
        <br>
        Date: <i>{{this.review_date}}</i>
        <br>
        {{this.summary}}
        <br>
        <a href="{{this.link}}">Full Review</a>
        <br>
    {{/each}}
    <footer class="mt-5">
        <i>
            {{copyright}}
        </i>
    </footer>

{{else}}
<h4>Sorry, no reviews were found.</h4>
<nav>
    <a href="/">Home</a>
</nav>
{{/if}}